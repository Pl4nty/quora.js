{
    "compilerOptions": {
        "lib": ["es6"],
        "types": ["node"],
        "pretty": true,
        "watch": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es2017",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "test/*.spec.ts"
    ]
}